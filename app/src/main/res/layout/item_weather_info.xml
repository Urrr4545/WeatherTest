<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.urrr4545.weathertest.domain.model.Weather" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp" />

        <TextView
            android:id="@+id/tv_weather_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@{item.dateStr}"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gl_begin"
            tools:text="Seoul" />

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            app:imgCod="@{item.icon}"
            app:layout_constraintStart_toStartOf="@+id/gl_begin"
            app:layout_constraintTop_toBottomOf="@+id/tv_weather_time"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_weather_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@{item.main}"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weather"
            app:layout_constraintStart_toEndOf="@id/iv_weather"
            tools:text="Clear" />

        <TextView
            android:id="@+id/tv_weather_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@{item.max}"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/iv_weather"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weather"
            app:layout_constraintEnd_toStartOf="@id/tv_weather_min"
            tools:text="Max" />

        <TextView
            android:id="@+id/tv_weather_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@{item.min}"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/iv_weather"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weather"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            tools:text="Min" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
